<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/layer_bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Check.CheckWind"
    tools:showIn="@layout/activity_check_wind">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginBottom="18dp"
            android:gravity="top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_bundle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="@string/element_3"
                android:textAlignment="center"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/wind"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:contentDescription="Wind element"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_wind"
                tools:layout_editor_absoluteX="119dp"
                tools:layout_editor_absoluteY="193dp" />

            <TextView
                android:id="@+id/txt_wind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/info_wind"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="173dp"
                tools:layout_editor_absoluteY="222dp" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>