<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.antwickler.thearokaya">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreenActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main menu -->
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CheckElemental"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_check_elemental"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BasicDisease"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/menu_2"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FoodHerbal"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/menu_3"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AgeDisease"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/menu_4"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".Hospital"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/menu_5"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Store"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/menu_6"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- 4 Elemental -->
        <activity
            android:name=".CheckEarth"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/element_1"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CheckWater"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/element_2"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CheckWind"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/element_3"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CheckFire"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/element_4"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Basic Disease -->
        <activity
            android:name=".BasicEarth"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/lbd_1"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BasicWater"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/lbd_2"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BasicWind"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/lbd_3"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BasicFire"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/lbd_4"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Age Disease -->
        <activity
            android:name=".AgeEarly"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/age_1"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AgeMiddle"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/age_2"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AgeEnd"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/age_3"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Login"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>